podTemplate(
        label: 'terraform-poc',
        containers: [
                containerTemplate(name: 'kubestack', image: 'gcr.io/timesphere/kbst-infra-automation:bootstrap', command: 'cat', ttyEnabled: true),
        ]
) {
    node('terraform-poc') {

        env.TF_IN_AUTOMATION='true'
        env.HOME='${WORKSPACE}'

        stage('Terraform init') {
            container('kubestack') {
                sh '''
                    git clone https://github.com/horasphere/terraform-kubestack.git 
                    cd terraform-kubestack
                    terraform init
                '''
            }
        }

        stage('Select ops workspace') {
            container('kubestack') {
                sh 'cd terraform-kubestack && terraform workspace select ops'
            }
            when {
                not {
                    tag comparator: 'REGEXP', pattern: '^apps-deploy-.*$'
                }
            }
        }
        stage('Select apps workspace') {
            container('kubestack') {
                sh 'cd terraform-kubestack && terraform workspace select apps'
            }
            when {
                tag comparator: 'REGEXP', pattern: '^apps-deploy-.*$'
            }
        }
        stage('Terraform plan') {
            container('kubestack') {
                sh 'cd terraform-kubestack && terraform plan -out=tfplan -input=false'
            }
        }
        stage('Terraform apply') {
            container('kubestack') {
                sh 'cd terraform-kubestack && terraform apply -input=false tfplan'
            }

            // we always run terraform plan against ops to give developer
            // feedback, but we only apply master to ops
            // or matching tags to apps
            when {
                anyOf {
                    branch 'master'
                    tag comparator: 'REGEXP', pattern: '^apps-deploy-.*$'
                }
            }
        }
    }
}
